<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "classpath:/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="app.mapper.postgre.UserMapper">
	<select id="getUserByUsernameOrEmail" parameterType="string" resultType="app.domain.mes.user.User">
	    SELECT 
	    	*
    	FROM 
    		users
    	WHERE 
    		username = #{value} OR email = #{value}
	</select>
	
	<select id="getUserByUsername" parameterType="string" resultType="app.domain.mes.user.User">
	    SELECT 
	    	*
    	FROM 
    		users
    	WHERE 
    		username = #{value}
	</select>
</mapper>

