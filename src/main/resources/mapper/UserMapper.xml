<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
<mapper namespace="vn.wl.mes.mapper.UserMapper">
	<select id="getUserByUsernameOrEmail" parameterType="string" resultType="User">
	    SELECT 
	    	*
    	FROM 
    		users
    	WHERE 
    		username = #{value} OR email = #{value}
	</select>
	
	<select id="getUserByUsername" parameterType="string" resultType="User">
	    SELECT 
	    	*
    	FROM 
    		users
    	WHERE 
    		username = #{value}
	</select>
</mapper>

